<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.3"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">

    <navigation-rule>
        <!-- Principal pages-->
        <navigation-case>
            <from-outcome>principal</from-outcome>
            <to-view-id>/principal.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <!--User and group pages-->
        <navigation-case>
            <from-outcome>users</from-outcome>
            <to-view-id>/user/users.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>userProfile</from-outcome>
            <to-view-id>/user/userProfile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>create-users</from-outcome>
            <to-view-id>/user/createUser.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>groups</from-outcome>
            <to-view-id>/group/editGroup.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>create-group</from-outcome>
            <to-view-id>/group/createGroup.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <!--Manage Production-->
        <navigation-case>
            <from-outcome>createProduction</from-outcome>
            <to-view-id>/production/createProduction.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>processProduction</from-outcome>
            <to-view-id>/production/processProduction.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>qualificationProduction</from-outcome>
            <to-view-id>/production/qualificationProduction.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>searchProduction</from-outcome>
            <to-view-id>/production/searchProduction.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <!--Manage Designs-->
        <navigation-case>
            <from-outcome>designs</from-outcome>
            <to-view-id>/design/editDesign.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>createDesign</from-outcome>
            <to-view-id>/design/createDesign.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <!--Manage Product-->
        <navigation-case>
            <from-outcome>createProduct</from-outcome>
            <to-view-id>/product/createProduct.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>products</from-outcome>
            <to-view-id>/product/searchProduct.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <!--Manage Supply-->
        <navigation-case>
            <from-outcome>supplies</from-outcome>
            <to-view-id>/supplies/searchSupply.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>newSupply</from-outcome>
            <to-view-id>/supplies/registerSupply.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>modifySupply</from-outcome>
            <to-view-id>/inventory/modifySupply.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <!--Calculators-->
        <navigation-case>
            <from-outcome>calcSupply</from-outcome>
            <to-view-id>/inventory/supplyCalculator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>calcProduction</from-outcome>
            <to-view-id>/inventory/bestProductionCalculator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
